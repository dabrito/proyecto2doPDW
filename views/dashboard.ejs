<div class="container my-4">
    <div class="row">
      <!-- Columna izquierda -->
      <div class="col-lg-6 col-md-6">
        <!-- Tabla de Saldo -->
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th colspan="2" class="text-center">Saldo</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>Ingresos</td>
              <td class="text-success fw-bold">{{ ingresos | currency:'USD' }}</td>
            </tr>
            <tr>
              <td>Gastos</td>
              <td class="text-danger fw-bold">{{ gastos | currency:'USD' }}</td>
            </tr>
            <tr>
              <td>Total</td>
              <td class="fw-bold">{{ total | currency:'USD' }}</td>
            </tr>
          </tbody>
        </table>
  
        <!-- Tabla de Últimas Transacciones -->
        <table class="table table-bordered table-striped mt-4">
          <thead>
            <tr>
              <th colspan="4" class="text-center">Últimas Transacciones</th>
            </tr>
            <tr>
              <th>Fecha</th>
              <th>Categoría</th>
              <th>Monto</th>
              <th>Tipo</th>
            </tr>
          </thead>
          <tbody>
            <tr *ngFor="let t of transactions.slice(0,5)">
              <td>{{ t.date | date:'dd/MM/yyyy' }}</td>
              <td>{{ t.category }}</td>
              <td [ngClass]="{'text-success': t.type === 'ingreso', 'text-danger': t.type === 'gasto'}">
                {{ t.amount | currency:'USD' }}
              </td>
              <td>
                <i *ngIf="t.type === 'ingreso'" class="bi bi-arrow-up-circle text-success"></i>
                <i *ngIf="t.type === 'gasto'" class="bi bi-arrow-down-circle text-danger"></i>
                {{ t.type }}
              </td>
            </tr>
          </tbody>
        </table>
      </div>
  
      <!-- Columna derecha -->
      <div class="col-lg-5 col-md-6">
        <div class="card">
          <div class="card-header">
            TRANSACCIÓN (Ingreso - Gasto)
          </div>
          <div class="card-body">
            <div class="mb-3">
              <label for="type" class="form-label">Tipo</label>
              <select id="type" class="form-select" [(ngModel)]="newTransactionType">
                <option value="ingreso">Ingreso</option>
                <option value="gasto">Gasto</option>
              </select>
            </div>
  
            <div class="mb-3">
              <label for="amount" class="form-label">Cantidad</label>
              <input type="number" class="form-control" id="amount" [(ngModel)]="newTransactionAmount" required min="0.01">
            </div>
  
            <div class="mb-3">
              <label for="category" class="form-label">Categoría</label>
              <input type="text" class="form-control" id="category" [(ngModel)]="newTransactionCategory">
            </div>
  
            <div class="mb-3">
              <label for="date" class="form-label">Fecha</label>
              <input type="date" class="form-control" id="date" [(ngModel)]="newTransactionDate">
            </div>
  
            <!-- Botón para agregar la transacción -->
            <button class="btn btn-primary w-100" (click)="addTransaction()">
              Agregar Transacción
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  